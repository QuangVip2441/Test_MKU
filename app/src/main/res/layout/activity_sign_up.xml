<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".models.Sign_Up_Activity">
    
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/brsign_up"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="100dp"
            android:textSize="40sp"
            android:textColor="@color/white"
            android:text="Đăng Ký">
        </TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp"
        android:layout_margin="12dp"
        android:padding="24dp"
        android:alpha="0.5"
        android:background="@drawable/style_layout_backround"
        android:orientation="vertical">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tài Khoản"
            android:textColor="@color/black"
            android:background="@drawable/style_edit_text_backround"
            android:drawableLeft="@drawable/ic_user"
            android:textColorHint="@color/black"
            android:layout_marginBottom="10dp"
            android:drawablePadding="12dp"
            android:id="@+id/editEmail"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Mật Khẩu"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:textColorHint="@color/black"
            android:drawableLeft="@drawable/ic_password"
            android:layout_marginBottom="10dp"
            android:background="@drawable/style_edit_text_backround"
            android:drawablePadding="12dp"
            android:id="@+id/editPassword"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:hint="Nhập lai mật khẩu"
            android:textColor="@color/black"
            android:inputType="textPassword"
            android:background="@drawable/style_edit_text_backround"
            android:drawableLeft="@drawable/ic_password"
            android:layout_marginBottom="10dp"
            android:drawablePadding="12dp"
            android:id="@+id/editPassword2"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:hint="Tên Người Dùng"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_user"
            android:background="@drawable/style_edit_text_backround"
            android:layout_marginBottom="10dp"
            android:drawablePadding="12dp"
            android:id="@+id/editUserName"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColorHint="@color/black"
            android:hint="Số Điện Thoại"
            android:textColor="@color/black"
            android:drawableLeft="@drawable/ic_phone"
            android:background="@drawable/style_edit_text_backround"
            android:layout_marginBottom="70dp"
            android:drawablePadding="12dp"
            android:id="@+id/editPhone"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng Ký"
            app:cornerRadius="48dp"
            android:id="@+id/buttonSignUp"/>
        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đăng Nhập"
            android:backgroundTint="@color/blue"
            app:cornerRadius="48dp"
            android:id="@+id/buttonSignIn"
            />
    </LinearLayout>

</FrameLayout>